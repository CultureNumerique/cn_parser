<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="/static/image/png" href="img/favicon.ico" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
    {% if body_class == 'home' %}<link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>{% endif %}
    <link href="static/css/bootstrap.min.css" rel="stylesheet">
    <link href="static/css/jasny-bootstrap.min.css" rel="stylesheet" media="screen">
    <!-- onepage css -->
    {% if body_class == 'home' %}
    <link href="static/css/onepage.css" rel="stylesheet">
    {% elif body_class == 'modules' or body_class == 'single' %}
    <link href="static/css/modules.css" rel="stylesheet">
    {% endif %}
    <!-- Icones -->
    <link href="static/css/icons.css" rel="stylesheet">
    <link href="static/css/common.css" rel="stylesheet">
    <title>{{ course.title }}</title>
</head>

<body class={{ body_class }} data-spy="scroll" {% if body_class == 'home' %}data-target="#header" data-offset="120"{%elif body_class== 'modules'%}data-target="#menugauche" data-offset="120"{% endif %}>

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" id="menutop">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Activer navigation principale</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">
                  <img class="hidden-xs logo" class="logo" src="{{logo}}" alt="logo">
                  <img class="visible-xs logo" src="static/img/logo_cercle_vert.svg" alt="logoxs">
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
		{% if body_class != "single" %}
                <li class="">
                  <a href="index.html">
                    <img src="static/img/home.svg" style="width:1.8em; height:1.8em; padding-right:0.5em; margin-top:-0.25em;">Accueil</a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <img src="static/img/modules.svg" style="width:3.5em; height:3.5em; padding-right:0.5em; margin-top:-0.90em; margin-bottom:-10px;">Modules
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    {% for module in course.modules %}
                    <li class="btnmodules {{module.class}}">
                      <a href="{{ module.name }}.html">{{module.menutitle}}</a>
                      <!-- <p class="subbtnmodules">{{module.title}}</p> -->
                    </li>
                    {% endfor %}
                  </ul>
                </li>
		{% endif %}
              </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>
    <!-- end of fixed top navbar -->
    {% block main_content %}
      {{ content | safe }}

    {% endblock %}
    <!-- Début footer -->
    <!-- <footer>
        <a href="https://www.univ-lille3.fr/">
            <img src="static/svg/logo_lille3.svg" title="" alt="Lille 3" />
        </a>
        <p><a href="http://culturenumerique.univ-lille3.fr/" title="Culture Numérique">{{ course.title }}</a> - 2015</p>
    </footer> -->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="static/js/vendors/bootstrap.min.js"></script>
    <script src="static/js/vendors/jasny-bootstrap.min.js"></script>
    {% if body_class == 'home' %}
    <script src="static/js/scroll.js"></script>
    {% else %}
    <script src="static/js/modules.js"></script>
    {% endif %}
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
            $('.email').click(function() {
                login = $(this).html().replace('<span class="iamnotadot"></span>', '.')
        		window.location.href = 'mailto:' + login + '@univ-lille3.fr';
        	});
        });
    </script>

</body>
</html>
